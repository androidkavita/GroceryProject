<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grey_back_ground"
    tools:context=".fragment.HelpFragment">

   <!-- <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_main" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp">

            <TextView
                android:id="@+id/mail_us_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avenirnextltpro_regular"
                android:text="Mail us at"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp" />


            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mail_us_txt"
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp"
                android:fontFamily="@font/avenirnextltpro_regular"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/txt_name"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@color/grey" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp">

            <TextView
                android:id="@+id/call_us_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avenirnextltpro_regular"
                android:text="Call us at"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp" />


            <TextView
                android:id="@+id/txt_calling_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/call_us_txt"
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp"
                android:fontFamily="@font/avenirnextltpro_regular"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/txt_calling_no"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@color/grey" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rlWhatsapp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp">

            <TextView
                android:id="@+id/whatsapp_us_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Whatsapp us at"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp"
                android:fontFamily="@font/avenirnextltpro_regular"/>


            <TextView
                android:id="@+id/text_for_whatsapp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/whatsapp_us_txt"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/avenirnextltpro_regular"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/text_for_whatsapp"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@color/grey" />


        </RelativeLayout>

    </LinearLayout>

</LinearLayout>