<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/grey_back_ground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_12sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MY CART"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:fontFamily="@font/avenirnextltpro_bold"/>

            <ImageView
                android:id="@+id/iv_ChangeLang"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:src="@drawable/lang"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/ll_Parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:padding="@dimen/_12sdp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tv_MinimumOrderAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MY CART"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/avenirnextltpro_regular"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_MyCart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_8sdp"/>


                <LinearLayout
                    android:id="@+id/ll_ButtonParent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:layout_marginTop="@dimen/_24sdp"
                    android:layout_marginBottom="@dimen/_24sdp">

                    <Button
                        android:id="@+id/button_Share"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/btn_solid_rounded"
                        android:gravity="center"
                        android:text="@string/share"
                        android:textAllCaps="true"
                        android:layout_weight="1"
                        android:textColor="@android:color/white"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:layout_marginRight="@dimen/_4sdp"
                        android:fontFamily="@font/avenirnextltpro_regular"/>

                    <Button
                        android:id="@+id/button_SaveAsQuatation"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/btn_solid_rounded"
                        android:gravity="center"
                        android:text="@string/saveAsQuotation"
                        android:textAllCaps="true"
                        android:layout_weight="1"
                        android:textColor="@android:color/white"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:layout_marginRight="@dimen/_4sdp"
                        android:fontFamily="@font/avenirnextltpro_regular"/>

                    <Button
                        android:id="@+id/buttonProceedToPay"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/btn_solid_rounded"
                        android:gravity="center"
                        android:text="@string/proceedToPay"
                        android:textAllCaps="true"
                        android:layout_weight="1"
                        android:textColor="@android:color/white"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:layout_marginRight="@dimen/_4sdp"
                        android:fontFamily="@font/avenirnextltpro_regular"/>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>


    </LinearLayout>

</layout>
