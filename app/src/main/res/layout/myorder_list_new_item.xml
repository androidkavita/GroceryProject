<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/black"
        android:weightSum="4">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_1sdp"
            android:layout_marginRight="@dimen/_1sdp"
            android:background="@color/white"
            android:padding="@dimen/_8sdp">

            <TextView
                android:id="@+id/tv_OrderNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/orderNo"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/avenirnextltpro_regular"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="01"
            android:background="@color/white"
            android:layout_marginTop="@dimen/_1sdp"
            android:layout_marginRight="@dimen/_1sdp"
            android:padding="@dimen/_8sdp">

            <TextView
                android:id="@+id/tv_OrderDate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:text="@string/orderDate"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/avenirnextltpro_regular"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="01"
            android:background="@color/white"
            android:layout_marginTop="@dimen/_1sdp"
            android:layout_marginRight="@dimen/_1sdp"
            android:padding="@dimen/_8sdp">

            <TextView
                android:id="@+id/tv_OrderAmount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/orderAmount"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                android:textAlignment="center"
                android:fontFamily="@font/avenirnextltpro_regular"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="01"
            android:background="@color/white"
            android:layout_marginTop="@dimen/_1sdp"
            android:layout_marginRight="@dimen/_1sdp"
            android:padding="@dimen/_8sdp">

            <TextView
                android:id="@+id/tv_OrderStatus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/orderStatus"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/avenirnextltpro_regular"/>

        </FrameLayout>

    </LinearLayout>

    <View
        android:id="@+id/LastLineView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/black"
        android:visibility="gone"/>

</LinearLayout>
