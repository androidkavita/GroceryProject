<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginLeft="@dimen/_1sdp"
        android:layout_marginTop="@dimen/_1sdp"
        android:layout_marginRight="@dimen/_1sdp"
        android:weightSum="5.5"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.0">

            <TextView
                android:id="@+id/tv_productname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rice"
                android:padding="@dimen/_4sdp"
                android:textSize="@dimen/_10sdp"
                android:fontFamily="@font/avenirnextltpro_regular"
                android:layout_toLeftOf="@+id/iv_BrandDropDown"
                android:textColor="@color/black"
                />

            <ImageView
                android:id="@+id/iv_BrandDropDown"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:src="@drawable/down_button_with_bg"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/_4sdp"/>

        </RelativeLayout>


        <!--<View
            android:layout_width="@dimen/_1sdp"
            android:layout_height="match_parent"
            android:background="@color/black"/>

        <TextView
            android:id="@+id/tv_UOM"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="30"
            android:layout_weight="0.5"
            android:gravity="center"
            android:textSize="@dimen/_10sdp"
            android:fontFamily="@font/avenirnextltpro_regular"/>-->

        <View
            android:layout_width="@dimen/_1sdp"
            android:layout_height="match_parent"
            android:background="@color/black"/>

        <TextView
            android:id="@+id/tv_Price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="100"
            android:layout_weight="0.75"
            android:gravity="center"
            android:textSize="@dimen/_10sdp"
            android:fontFamily="@font/avenirnextltpro_regular"
            android:textColor="@color/black"
            />

        <View
            android:layout_width="@dimen/_1sdp"
            android:layout_height="match_parent"
            android:background="@color/black"/>

        <EditText
            android:id="@+id/tv_QTY"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_weight="1"
            android:inputType="number"
            android:gravity="center"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/black"
            android:fontFamily="@font/avenirnextltpro_regular" />

        <View
            android:layout_width="@dimen/_1sdp"
            android:layout_height="match_parent"
            android:background="@color/black"/>

        <TextView
            android:id="@+id/tv_TotalPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="300"
            android:layout_weight="0.735"
            android:gravity="center"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/black"
            android:fontFamily="@font/avenirnextltpro_regular"/>

        <View
            android:layout_width="@dimen/_1sdp"
            android:layout_height="match_parent"
            android:background="@color/black"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.735">

            <CheckBox
                android:id="@+id/cb_AddToCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/avenirnextltpro_regular"/>

        </RelativeLayout>

        <View
            android:layout_width="@dimen/_1sdp"
            android:layout_height="match_parent"
            android:background="@color/black"/>

        <RelativeLayout
            android:id="@+id/rlSave"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5">

            <ImageView
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_centerInParent="true"
                android:fontFamily="@font/avenirnextltpro_regular"
                android:src="@drawable/save_changes_tick" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>